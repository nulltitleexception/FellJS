@import "includes/helpers"

$hoverOverPadding = 24px
$listPadding = 15px

#wrapper #dragoverelement
	position absolute
	width 100%
	height 100%
	padding $hoverOverPadding
	top -($hoverOverPadding)
	left -($hoverOverPadding)
	semitransparentBackdrop()
	-webkit-backdrop-filter blur(8px) /*only supported in bleeding-edge Webkit*/
	borderRadius(5px)

	h3 
		font-size 32px
		margin (($wrapperHeight - @font-size)/2) 0
		text-align center

#dropgrabber
	display block
	position absolute
	width 100%
	height 100%
	z-index 1337

	&.inactive
		display none

	&.active
		display block

#listwrapper
	width $wrapperWidth
	height $wrapperHeight
	top 50%
	left 50%
	margin-top -($wrapperHeight/2)
	margin-left ($wrapperWidth/2)+30
	position absolute
	padding $listPadding
	borderBox()
	display block
	overflow hidden
	semitransparentBackdrop()

	&.hide
		display none

	&.show
		

	h3 
		font-size 22px
		text-align center
		margin-bottom 20px
	
	#list
		display block
		height ($wrapperHeight - (2*$listPadding) - 22 - 20)
		width ($wrapperWidth - (2*$listPadding))
		overflow-y scroll


		ul 
			width 100%
			height 100%

			li
				margin-bottom 10px

				&:last-of-type
					margin-bottom 0

				strong
					color #d5d5d5